<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="hot"
            type="com.hafiizh.japanesestation.data.local.entity.HotEntity" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/posts_image"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                app:url="@{hot.image}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/posts_cate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{hot.tag}"
                    android:textColor="#9b9b9b"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/circle" />

                <TextView
                    android:id="@+id/posts_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{hot.day_publish}"
                    android:textColor="#9b9b9b"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/posts_desc"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="9"
                    android:text="@{hot.sub_title}"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/posts_book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_bookmark_border_black_24dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>